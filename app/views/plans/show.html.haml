.plan
  #header
    %ul
      %li.username
        %span.title
          Username
        %span.value
          =@account.username
      %li.lastupdated
        %span.title
          Last Updated:
          / TODO 2 date formats
        %span.value
          %span.long
            =l @account.changed_date unless  @account.changed_date.nil?
          %span.short
            =l @account.changed_date unless  @account.changed_date.nil?
      %li.lastlogin
        %span.title
          Last login:
        %span.value
          %span.short
            =@account.login
          %span.long
            =@account.login
      %li.planname
        %span.title
          Name:
        %span.value
          =@account.pseudo

.plan_text
  =@account.plan.generated_html
